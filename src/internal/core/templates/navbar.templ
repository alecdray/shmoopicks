			<a class="text-4xl font-brand p-3" href="/home">shmoopicks</a>
		</div>
		<div class="navbar-center">
			<div class="flex gap-5 items-center">
				// @navBarLink(navBarLinkProps{
				// 	href:     "/home",
				// 	isActive: props.ActivePage == HomePage,
				// }) {
				// 	Home
				// }
				// @navBarSeparator()
			</div>
		</div>
